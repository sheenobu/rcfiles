conky.config = {
	alignment = 'top_left',

	cpu_avg_samples = 1,
	net_avg_samples = 1,
	update_interval = 5,

	default_color = '#00ccff',
	default_outline_color = '#00ccff',
	default_shade_color = '#00ccff',
	color2 = 'gray70',
    color3 = '#00ccff',

	use_xft = true,
	font = 'Monospace:size=9',

	draw_borders = true,
	draw_shades = false,
	draw_graph_borders = false,
	draw_outline = false,

	border_width = 0,

	gap_x = 16,
	gap_y = 8,

	own_window_argb_visual = true,
	own_window_argb_value = 0,
	own_window = true,
	own_window_type = 'desktop',
	own_window_transparent = true,
	own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',

	use_spacer = 'none',
	double_buffer = false,
	no_buffers = false,

	total_run_times = 0,
	background = false,
}

